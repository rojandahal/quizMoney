<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ingamebackground"
    tools:context=".InGame">


        <LinearLayout
            android:id="@+id/linearUpper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:contentDescription="@string/logo"
                android:src="@drawable/ic_logo" />

            <TextView
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:fontFamily="@font/bold"
                android:text="@string/question"
                android:background="@color/white"
                android:layout_marginTop="8dp"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/no_indicator"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:gravity="center"
                android:text="@string/_7_10"
                android:textSize="18sp" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/options"
        android:layout_width="match_parent"
        android:layout_height="298dp"
        android:layout_below="@id/linearUpper"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button7"
            android:layout_width="320dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/optionbtn"
            android:text="@string/button"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="320dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/optionbtn"
            android:text="@string/button"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="320dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/optionbtn"
            android:text="@string/button"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button10"
            android:layout_width="320dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/optionbtn"
            android:text="@string/button"
            android:textColor="@color/white"
            android:textSize="20sp" />


    </LinearLayout>

    <Button
        android:id="@+id/nxtbtn"
        android:layout_width="145dp"
        android:layout_height="62dp"
        android:layout_below="@id/options"
        android:layout_marginTop="18dp"
        android:background="@drawable/next_btn"
        android:text="@string/next"
        android:enabled="false"
        android:alpha="0.38"
        android:textColor="@color/white"
        android:textSize="20sp" />


</RelativeLayout>